# Defaults for ckpool environment variables
# Copy this to .env and edit as needed

# Mode: true = BTCSOLO (each miner paid to their own address)
#       false = Pool mode (all rewards go to BTC_ADDRESS)
BTCSOLO=true

# Required if BTCSOLO=false
BTC_ADDRESS=

# Bitcoin Core RPC connection
BTC_RPC_URL=bitcoind:8332
BTC_RPC_USER=rpcuser
BTC_RPC_PASS=rpcpassword

# Vanity signature embedded in mined blocks (up to ~30 ASCII chars)
POOL_SIG=/FamilyPool/

# Stratum listening port (inside the container)
SERVER_URL=0.0.0.0:3333

# Difficulty settings (vardiff)
MIN_DIFF=256
START_DIFF=256
MAX_DIFF=0

# Runtime log persistence
LOG_DIR=/config/logs
DROP_IDLE=3600
UPDATE_INTERVAL=30
DONATION=0

# Host path for config persistence
CONFIG_PATH=/srv/ckpool/config
