# Defaults for ckpool environment variables
# Copy this to .env and edit as needed

# Mode: true = BTCSOLO (each miner paid to their own address)
#       false = Pool mode (all rewards go to BTC_ADDRESS)
BTCSOLO=true

# Required if BTCSOLO=false
BTC_ADDRESS=

# --- Bitcoin Core RPC connection ---
# Connection used by ckpool to talk to bitcoind
BTC_RPC_URL=bitcoind:8332
BTC_RPC_USER=rpcuser
BTC_RPC_PASS=rpcpassword

# --- Path Configuration (Host Paths) ---
# Where to store Bitcoin blockchain data (requires ~600GB+)
BITCOIND_DATA_PATH=/srv/bitcoin
# Where to store ckpool logs and dynamic config
CONFIG_PATH=/srv/ckpool/config

# --- Pool Settings ---
# Block signing name (up to ~30 chars)
POOL_SIG=/FamilyPool/
# Stratum port (container-side)
SERVER_URL=0.0.0.0:3333

# Difficulty settings (vardiff)
MIN_DIFF=256
START_DIFF=256
MAX_DIFF=0

# Runtime settings
LOG_DIR=/config/logs
DROP_IDLE=3600
UPDATE_INTERVAL=30
DONATION=0.0
